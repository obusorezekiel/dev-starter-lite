include includes/header.includes.pug

html
  body
    .container
      .section-header
      main.login-form
        .cotainer
          .row.justify-content-center
            .col-md-8
              .card
                .card-header Forgot Password
                .card-body
                  form(action="/login" method="POST")
                    .form-group.row
                      label.col-md-4.col-form-label.text-md-right(for="email_address") E-Mail Address
                      .col-md-6
                        input#email.form-control(type="text" name="email" autofocus="")
                    .col-md-6.offset-md-4
                      button.btn.btn-primary(type="submit")
                        | Send Recovery Link
script(src="vendor/jquery/jquery.min.js")
script(src="vendor/bootstrap/js/bootstrap.bundle.min.js")